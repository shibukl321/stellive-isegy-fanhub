const GALLERY_KEY='gallery-manual-v1', PIN_KEY='gallery-pin-v1'; function todayStr(){const d=new Date(); const y=d.getFullYear(); const m=('0'+(d.getMonth()+1)).slice(-2); const day=('0'+d.getDate()).slice(-2); return `${y}-${m}-${day}`;}
